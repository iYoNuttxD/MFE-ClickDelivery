# API Gateway Configuration
VITE_API_URL=https://cd-apim-gateway.azure-api.net/api/v1

# Authentication Mode
# Set to 'true' to use Auth0, leave empty or 'false' for BFF-only mode
VITE_USE_AUTH0=false

# Auth0 Configuration (only required if VITE_USE_AUTH0=true)
VITE_AUTH0_DOMAIN=your-domain.auth0.com
VITE_AUTH0_CLIENT_ID=your-client-id
VITE_AUTH0_AUDIENCE=clickdelivery-ap
VITE_AUTH0_SCOPE=openid profile email offline_access
VITE_AUTH0_REDIRECT_URI=http://localhost:3000

# Environment
VITE_ENVIRONMENT=development

# Test Role Switcher (optional)
# Set to 'true' to enable role switcher in production mode (automatically enabled in dev mode)
VITE_ENABLE_ROLE_SWITCHER=false

# Internal Simulation Mode (optional)
# Set to 'true' to enable internal mock/sandbox mode for testing without backend
# When enabled, all API calls use local in-memory/localStorage data
VITE_USE_INTERNAL_MODE=true

# Seeds Configuration (optional)
SEED_API_URL=https://cd-apim-gateway.azure-api.net/api/v1
